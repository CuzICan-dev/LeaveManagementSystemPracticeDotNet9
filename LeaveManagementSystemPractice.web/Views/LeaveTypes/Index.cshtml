@model IEnumerable<LeaveManagementSystemPractice.web.Data.Entities.LeaveType>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary p-2 pt-1 pb-1" asp-action="Create"><i class="fa-regular fa-square-plus me-1"></i>Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                <a class="btn btn-warning p-2 pt-1 pb-1" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-regular fa-pen-to-square me-1"></i>Edit</a>
                <a class="btn btn-info p-2 pt-1 pb-1" asp-action="Details" asp-route-id="@item.Id"><i class="fa-regular fa-circle-question me-1"></i>Details</a>
                <a class="btn btn-danger p-2 pt-1 pb-1" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-regular fa-trash-can me-1"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
